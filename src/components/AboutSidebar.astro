---
interface SectionLink {
  id: string;
  label: string;
}
const { sections } = Astro.props as { sections: SectionLink[] };
---
<aside class="about-aside">
  <div class="aside-inner">
    <!-- Portrait -->
    <div class="avatar-wrap">
      <img src="/images/my-image.png" alt="Jeremy portrait" class="avatar" />
    </div>

    <h2 class="aside-name">Jeremy</h2>
    <p class="aside-title">Systems Administrator</p>

    <nav class="aside-nav" aria-label="About navigation">
      {sections.map((s) => (
        <a class="aside-link" href={`#${s.id}`} data-section={s.id}>{s.label}</a>
      ))}
      <span class="active-indicator" aria-hidden="true"></span>
    </nav>
  </div>
</aside>

<style>
.about-aside {
  position: sticky;
  top: 6rem; /* below your site header */
  align-self: start;
}
.aside-inner {
  background: rgba(255,255,255,0.02);
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 1rem;
  padding: 1.25rem 1rem;
  backdrop-filter: blur(6px);
}
.avatar-wrap {
  display: grid;
  place-items: center;
  margin-bottom: 0.75rem;
}
.avatar {
  width: 128px;
  height: 128px;
  object-fit: cover;
  border-radius: 999px;
  box-shadow:
    0 0 0 3px rgba(0,0,0,0.6) inset,
    0 0 10px #b800ff,
    0 0 24px #b800ff,
    0 0 40px rgba(184,0,255,0.35);
}
.aside-name {
  font-family: var(--font-heading, Orbitron, sans-serif);
  text-align: center;
  font-size: 1.1rem;
  letter-spacing: 0.02em;
  margin: 0.25rem 0 0.1rem;
}
.aside-title {
  text-align: center;
  opacity: 0.7;
  font-size: 0.85rem;
  margin: 0 0 0.75rem;
}

.aside-nav {
  position: relative;
  display: grid;
  gap: 0.35rem;
}
.aside-link {
  position: relative;
  display: block;
  padding: 0.55rem 0.6rem;
  border-radius: 0.6rem;
  font-size: 0.92rem;
  letter-spacing: 0.04em;
  text-decoration: none;
  color: rgba(255,255,255,0.78);
  border: 1px solid rgba(255,255,255,0.08);
  transition: transform 120ms ease, border-color 200ms ease, color 200ms ease, background 200ms ease;
  background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
}
.aside-link:hover {
  transform: translateX(2px);
  border-color: rgba(0, 255, 120, 0.45);
  color: #fff;
}
.aside-link.active {
  color: #fff;
  border-color: rgba(0, 255, 120, 0.6);
  box-shadow: 0 0 12px rgba(0,255,120,0.18), inset 0 0 12px rgba(0,255,120,0.06);
  background: radial-gradient(100% 100% at 0% 50%, rgba(0,255,120,0.05), transparent 60%);
}

/* Mobile: sidebar becomes a top bar */
@media (max-width: 900px) {
  .about-aside {
    position: static;
    width: 100%;
    margin-bottom: 1rem;
  }
  .aside-inner {
    display: grid;
    gap: 0.5rem;
  }
  .aside-nav {
    grid-auto-flow: column;
    overflow-x: auto;
    gap: 0.5rem;
    padding-bottom: 0.25rem;
  }
  .aside-link { white-space: nowrap; }
  .avatar { width: 96px; height: 96px; }
}
</style>
