---
const links = [
  { href: "/", label: "HOME" },
  { href: "/about", label: "ABOUT" },
// { href: "/blog", label: "MY BLOG" }, Possible future update
  { href: "/projects", label: "PROJECTS" },
  { href: "/certifications", label: "CERTIFICATIONS"},
];
const pathname = Astro.url.pathname;
---
<header class="navbar">
  <div class="container nav-inner">
    <!-- Left spacer keeps links centered (even with the Contact chip on the right) -->
    <div class="nav-side"></div>

    <nav class="nav-links">
      {links.map(l => (
        <a href={l.href} class={"nav-link" + (pathname === l.href ? " active" : "")}>
          {l.label}
        </a>
      ))}
    </nav>

    <div class="nav-side nav-right">
      <a href="/contact" class="contact-chip">CONTACT</a>
    </div>
  </div>
</header>
