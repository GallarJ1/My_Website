---
import BaseLayout from "../layouts/BaseLayout.astro";
import LinkBubble from "../components/LinkBubble.astro";

/** Replace with your actual assets/links */
const NAME = "Jeremy Gallardo";
const HEADSHOT = "/images/my-image.png";        // put this in /public/images/
const RESUME = "/resume/My_Resume.pdf";                   // put this in /public/
const EMAIL = "jeremy.n.gallardo@gmail.com";
const LINKEDIN = "https://www.linkedin.com/in/jeremy-nicolas-gallardo/";
const GITHUB = "https://github.com/GallarJ1";
const UPWORK = "https://www.upwork.com/freelancers/~0145909b0625062c4e"

/** Emoji set tuned to your cyber theme (swap anytime):
    ✉️  💼  🛠️  📄  ⚡  🛰️  💻  📟  🔧  🌐
*/
const links = [
  { label: "Email Me",    icon: "✉️", href: `mailto:${EMAIL}`, external: false },
  { label: "LinkedIn Profile", icon: "💼", href: LINKEDIN, external: true },
  { label: "View My Resume",   icon: "📄", href: RESUME, external: true },
  { label: "My GitHub",        icon: "🛠️", href: GITHUB, external: true },
  { label: "Work With Me",     icon: "🤝", href: UPWORK, external:true},
];
---
<BaseLayout title="Contact">
  <main class="wrap">
    <section class="card">
      <img src={HEADSHOT} alt={`${NAME} headshot`} class="avatar" />
      <h1 class="name">{NAME}</h1>


      <div class="links">
        {links.map((l, i) => (
          <div class="row" style={`animation-delay:${80 * i}ms`}>
            <LinkBubble {...l} aria={`${l.label} - opens ${l.external ? "in new tab" : "mail client"}`} />
          </div>
        ))}
      </div>
    </section>
  </main>

  <style>
    .wrap {
      min-height: calc(100dvh - var(--navHeight, 64px));
      display: grid;
      place-items: center;
      padding: 4rem 1rem 6rem;
      background:
        radial-gradient(60% 40% at 50% 0%, rgba(0,255,200,.06), transparent 70%),
        radial-gradient(40% 30% at 30% 100%, rgba(150,0,255,.05), transparent 70%),
        radial-gradient(30% 30% at 80% 70%, rgba(0,180,255,.04), transparent 70%);
    }

    .card {
      width: 100%;
      max-width: 520px;
      display: grid;
      justify-items: center;
      gap: 1rem;
      text-align: center;
      padding: 2.2rem 1.4rem 2.4rem;
      border-radius: 1.25rem;
      border: 1px solid rgba(0,255,200,.25);
      background: rgba(10,14,16,.55);
      box-shadow: 0 0 40px rgba(0,255,200,.08), inset 0 0 32px rgba(0,0,0,.35);
      backdrop-filter: blur(6px);
    }

    .avatar {
      width: 104px;
      height: 104px;
      border-radius: 999px;
      object-fit: cover;
      border: 2px solid rgba(0,255,200,.55);
      box-shadow: 0 0 22px rgba(0,255,200,.45);
    }

    .name {
      margin: .2rem 0 1rem;
      font-family: var(--font-orbitron, 'Orbitron', ui-sans-serif, system-ui);
      font-weight: 700;
      letter-spacing: .5px;
    }

    .links {
      width: 100%;
      display: grid;
      gap: .8rem;
      margin-top: .2rem;
    }

    .row {
      opacity: 0;
      transform: translateY(6px);
      animation: rise .5s ease forwards;
    }
    @keyframes rise {
      to { opacity: 1; transform: translateY(0); }
    }

    @media (min-width: 640px) {
      .card { padding: 2.6rem 2rem 2.8rem; }
    }
  </style>
</BaseLayout>
